{
  "$schema": "https://www.schemastore.org/package.json",
  "name": "gdshader-language-server",
  "version": "1.0.0",
  "description": "Language support for .gdshader files",
  "author": "armsnyder",
  "main": "./src/extension.js",
  "type": "commonjs",
  "license": "MIT",
  "scripts": {
    "lint": "eslint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vscode-test",
    "typecheck": "tsc",
    "publish": "cp ../CHANGELOG.md . && cp ../cosign.pub . && vsce publish"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.0",
    "@types/adm-zip": "^0.5.7",
    "@types/node": "^24.0.6",
    "@types/tar-stream": "^3.1.4",
    "@types/unzipper": "^0.10.11",
    "@types/vscode": "^1.101.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^9.30.0",
    "prettier": "^3.6.2",
    "vscode-languageclient": "^9.0.1"
  },
  "publisher": "armsnyder",
  "displayName": "Godot Shader Language",
  "icon": "icon.png",
  "preview": true,
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "godot",
    "gd",
    "godot engine",
    "godot shader",
    "shader",
    "gdshader",
    "gdshaderinc",
    "language server",
    "lsp"
  ],
  "contributes": {
    "languages": [
      {
        "id": "gdshader",
        "extensions": [
          ".gdshader",
          ".gdshaderinc"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "gdshader.restartServer",
        "title": "Restart GDShader Language Server",
        "category": "GDShader"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "gdshader.restartServer",
          "when": "editorLangId == gdshader"
        }
      ]
    }
  },
  "activationEvents": [
    "onLanguage:gdshader"
  ],
  "badges": [
    {
      "url": "https://img.shields.io/github/stars/armsnyder/gdshader-language-server",
      "description": "GitHub Repo Stars",
      "href": "https://github.com/armsnyder/gdshader-language-server"
    },
    {
      "url": "https://img.shields.io/github/issues/armsnyder/gdshader-language-server",
      "description": "GitHub Issues",
      "href": "https://github.com/armsnyder/gdshader-language-server/issues"
    },
    {
      "url": "https://goreportcard.com/badge/github.com/armsnyder/gdshader-language-server",
      "description": "Go Report Card",
      "href": "https://goreportcard.com/report/github.com/armsnyder/gdshader-language-server"
    }
  ],
  "sponsor": {
    "url": "coff.ee/armsnyder"
  }
}
